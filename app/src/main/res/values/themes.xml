<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlfagiftTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white700</item>
        <item name="colorCardBackground">@color/white</item>
        <item name="colorTextTitle">@color/black</item>
        <item name="colorTextBody">@color/black</item>
    </style>

    <style name="Widget.AppCompat.Button.Review">
        <item name="android:enabled">false</item>
        <item name="android:clickable">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">@drawable/bg_review</item>
        <item name="android:drawableStart">@drawable/ic_start</item>
        <item name="android:drawableTint" tools:targetApi="M">#FF9800</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.AppCompat.Toolbar.TextSize">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="ShapeAppearance.App.RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline4.Core">
        <item name="android:textColor">?attr/colorTextTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">36sp</item>
    </style>
    <style name="TextAppearance.MaterialComponents.Headline5.Core">
        <item name="android:textColor">?attr/colorTextTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="TextAppearance.MaterialComponents.Body1.Core">
        <item name="android:textColor">?attr/colorTextBody</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.MaterialComponents.Body2.Core">
        <item name="android:textColor">?attr/colorTextBody</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextAppearance.MaterialComponents.Subtitle1.Core">
        <item name="android:textColor">?attr/colorTextTitle</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>